<ui:UiPage
    x:Class="FileManager.Views.Pages.GeneralPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:FileManager.Views.Pages"
    Title="GeneralPage"
    d:DataContext="{d:DesignInstance local:GeneralPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="750"
    d:DesignWidth="800"
    Loaded="OnLoaded"
    Scrollable="False"
    Unloaded="OnUnloaded"
    mc:Ignorable="d">

    <VirtualizingStackPanel x:Name="RootPanel" Margin="18,0,18,18" IsVirtualizing="True" VirtualizationMode="Recycling">

        <TextBlock Margin="0,10,0,20" Text="Move" FontSize="16" />
        <ui:Button Content="Move to main path"/>
        <VirtualizingStackPanel Orientation="Horizontal" Margin="0,10">
            <ui:TextBox Width="255" Margin="0,0,10,0"/>
            <ui:Card Padding="2">
                <VirtualizingStackPanel Orientation="Horizontal">
                    <CheckBox Margin="0,0,-22,0">Count up</CheckBox>
                    <ui:Button Content="?"/>
                </VirtualizingStackPanel>
            </ui:Card>
        </VirtualizingStackPanel>
        <VirtualizingStackPanel Orientation="Horizontal">
            <ui:Button Margin="0,0,10,0" Content="To same subdirectory"/>
            <ui:Button Margin="0,0,10,0" Content="To single subdirectory"/>
        </VirtualizingStackPanel>




        <ui:NavigationSeparator/>

        <ui:Card Margin="0,8,0,0">
            <VirtualizingStackPanel>
                <TextBlock Margin="0,0,0,20" FontSize="16" Text="Move" />
                <ui:Button Content="Move to main path"/>
                <VirtualizingStackPanel Orientation="Horizontal" Margin="0,10">
                    <ui:TextBox Width="255" Margin="0,0,10,0"/>
                    <ui:Card Padding="2">
                        <VirtualizingStackPanel Orientation="Horizontal">
                            <CheckBox Margin="0,0,-22,0">Count up</CheckBox>
                            <ui:Button Content="?"/>
                        </VirtualizingStackPanel>
                    </ui:Card>
                </VirtualizingStackPanel>
                <VirtualizingStackPanel Orientation="Horizontal">
                    <ui:Button Margin="0,0,10,0" Content="To same subdirectory"/>
                    <ui:Button Margin="0,0,10,0" Content="To single subdirectory"/>
                </VirtualizingStackPanel>
            </VirtualizingStackPanel>
        </ui:Card>
        
        
        
        
        


        <ui:Card Margin="0,8,0,0">
            <VirtualizingStackPanel>
                <TextBlock FontSize="16" Margin="0,-10,0,-10" Text="Move" />
            </VirtualizingStackPanel>
            <ui:Card.Footer>
                <VirtualizingStackPanel>
                    <ui:Button Content="To main path"/>
                    <VirtualizingStackPanel Orientation="Horizontal" Margin="0,10">
                        <ui:TextBox Width="255" Margin="0,0,10,0"/>
                        <ui:Card Padding="2">
                            <VirtualizingStackPanel Orientation="Horizontal">
                                <CheckBox Margin="0,0,-22,0">Count up</CheckBox>
                                <ui:Button Content="?"/>
                            </VirtualizingStackPanel>
                        </ui:Card>
                    </VirtualizingStackPanel>
                    <VirtualizingStackPanel Orientation="Horizontal">
                        <ui:Button Margin="0,0,10,0" Content="To same subdirectory"/>
                        <ui:Button Margin="0,0,10,0" Content="To single subdirectory"/>
                    </VirtualizingStackPanel>
                </VirtualizingStackPanel>
            </ui:Card.Footer>
        </ui:Card>
    </VirtualizingStackPanel>
</ui:UiPage>